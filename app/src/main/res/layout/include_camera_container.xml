<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.perfxlab.bankcarddetect.camera.DrawInfoView
        android:id="@+id/drawPointView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/camera_container_origin_data_size"
        android:layout_height="@dimen/camera_container_origin_data_size"
        android:layout_gravity="right" />

    <ImageView
        android:id="@+id/iv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:padding="@dimen/camera_container_switch_padding"
        android:src="@mipmap/camera_flip" />

</FrameLayout>